<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<fx:root alignment="TOP_RIGHT"
         spacing="10"
         maxHeight="Infinity"
         maxWidth="Infinity"
         prefWidth="400.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <!-- Optional spacer to push text away from avatar -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Message text -->
        <Label fx:id="dialog"
               text="Message text"
               wrapText="true"
               maxWidth="250"
               style="-fx-background-color: #20676eff;
                      -fx-background-radius: 15;
                      -fx-padding: 10;
                      -fx-font-size: 14px;" />

        <!-- Avatar -->
        <ImageView fx:id="displayPicture"
                   fitHeight="70.0"
                   fitWidth="70.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5,0,0,1);" />
    </children>

    <padding>
        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
    </padding>

</fx:root>