<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #f4f6f9;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="salah.MainWindow">

    <children>
        <!-- Scrollable chat area -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0"
                    style="-fx-background: transparent; -fx-border-color: transparent;">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10"
                      style="-fx-background-color: #ffffff; -fx-background-radius: 10;">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Input bar -->
        <AnchorPane prefHeight="50.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="0.0"
                    style="-fx-background-color: #ffffff; -fx-border-color: #ddd;">
            <children>
                <TextField fx:id="userInput"
                           promptText="Type your message..."
                           AnchorPane.leftAnchor="10.0"
                           AnchorPane.rightAnchor="80.0"
                           AnchorPane.topAnchor="5.0"
                           AnchorPane.bottomAnchor="5.0"
                           onAction="#handleUserInput"
                           style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 0 10;" />

                <Button fx:id="sendButton"
                        text="Send"
                        AnchorPane.rightAnchor="10.0"
                        AnchorPane.topAnchor="5.0"
                        AnchorPane.bottomAnchor="5.0"
                        prefWidth="65.0"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 20;" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
